    <sources><sourceProduct>BandSelect_OLCI_Oa01</sourceProduct></sources>
    <parameters>
      <file>${targetFolder}/r_TOA_01_x.tif</file><formatName>GeoTIFF</formatName>
    </parameters>
  </node>

